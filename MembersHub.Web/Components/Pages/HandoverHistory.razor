@code {
    private User? currentUser;
    private bool loading = true;
    private List<CashierHandover> handovers = new();

    protected override async Task OnInitializedAsync()
    {
        currentUser = await SessionService.GetCurrentUserAsync();
        if (currentUser == null)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        await LoadHandovers();
    }

    private async Task LoadHandovers()
    {
        loading = true;
        try
        {
            if (currentUser != null)
            {
                // Admin/Owner can see all handovers, Treasurer sees only their own
                if (currentUser.Role == UserRole.Admin || currentUser.Role == UserRole.Owner)
                {
                    handovers = await HandoverService.GetAllHandoversAsync();
                }
                else
                {
                    handovers = await HandoverService.GetCashierHandoversAsync(currentUser.Id);
                }
            }
        }
